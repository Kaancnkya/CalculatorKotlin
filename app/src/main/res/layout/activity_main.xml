<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D4D5DA"
        android:gravity="end"
        android:paddingTop="50dp"
        android:paddingEnd="15dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:onClick="btnAc"
                android:text="AC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPlus_Minus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="+/-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnPercent"
                android:padding="10dp"
                android:text="%"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"

                android:layout_weight="1"
                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnOperatorClick"
                android:padding="10dp"
                android:text="/"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"

                android:layout_weight="1"
                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"

                android:layout_weight="1"
                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button9"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_margin="0.85dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"

                android:padding="10dp"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnOperatorClick"
                android:padding="10dp"
                android:text="x"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnOperatorClick"
                android:padding="10dp"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnOperatorClick"
                android:padding="10dp"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonComma"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"

                android:layout_weight="1"
                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:padding="10dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"
                android:layout_weight="1"

                android:background="@drawable/btn"
                android:backgroundTint="#6C6868"
                android:onClick="btnClick"
                android:padding="10dp"
                android:text="."
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.85dp"

                android:layout_weight="1"
                android:background="@drawable/btn"
                android:onClick="btnEquals"
                android:text="="
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>